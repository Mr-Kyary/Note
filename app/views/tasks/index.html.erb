<div class="wrapper">
  <%# flash message %>
  <% flash.each do |msg| %>
  <div class="alert alert-primary" role="alert">
    <%= msg[1] %>
  </div>
  <% end %>

  <table>
    <tbody>
      <% @tasks.each do |t| %>
      <div class="container">
        <div class="list-group">
          <%# 各タスクの色変更 %>
          <%
            task_state = {}
            if t.state == 'todo'
              task_state[:state_color] = 'alert-info'
              task_state[:state_emoji] = "⏯" ##再生・一時停止
            elsif t.state == 'doing'
              task_state[:state_color] = 'alert-secondary'
              task_state[:state_emoji] = "🏃" ##走る男
            else
              task_state[:state_color] = 'alert-success'
              task_state[:state_emoji] = "✅" ##チェック
              
            end
          %>
          <div class="alert <%= task_state[:state_color] %>">
            <div>
              <pre><%= task_state[:state_emoji]%>  <strong><%= t.state %></strong>　&#x1f55d; <%= t.limit_date %></pre>
            </div>
            <div>
              <strong><%= t.task %></strong>
            </div>
            <div>
              <ul class="nav nav-pills nav-justified">
                <li class="nav-item">
                  <a href="/tasks/<%= t.id %>" class="btn btn-primary">edit</a>
                </li>
                <li class="nav-item">
                  <form method="POST" action="/tasks/<%= t.id %>">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                    <button type="submit" class="btn btn-secondary">delete</button>
                  </form>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </tbody>
  </table>
</div>