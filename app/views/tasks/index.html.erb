<form method="POST" action="/tasks">
  <div class="pos-f-t">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="collapse" id="navbarToggleExternalContent">
      <div class="bg-dark p-4">
        <label class="text-info" for="task">内容</label>
        <input id="task" name="task" type="text" required>
        <label class="text-info">分類</label>
        <select name="state">
        <% @status.each_with_index do |s,i| %>
        <option value="<%= s %>"><%= s %></option>
        <% end %>
        </select>
        <div>
        <label class="text-info">期限</label>
          <input type="date" name="limit_date" required>
        </div>
        <p>
          <button class="btn btn-success" type="submit">create</button>
        </p>
      </div>
    </div>
    <nav class="navbar navbar-dark bg-dark">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </nav>
  </div>
</form>

